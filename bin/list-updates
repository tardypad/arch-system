#!/bin/sh
# commands used:
# - column
# - fakeroot
# - mktemp
# - pacman
# - pacman-conf

TMP_DIR="$( mktemp -d )"
trap 'rm -rf "${TMP_DIR}"' EXIT

rm -rf "${TMP_DIR}"
mkdir -p "${TMP_DIR}"

ln -s "$( pacman-conf DBPath )/local" "${TMP_DIR}"
fakeroot -- pacman -Sy -b "${TMP_DIR}" --logfile /dev/null > /dev/null

pacman -Qu -b "${TMP_DIR}" --logfile /dev/null \
  | grep -v '\[ignored\]' \
  | cut -d' ' -f1,2,4 \
  | column -t

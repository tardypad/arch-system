#!/bin/sh
# commands used:
# - mktemp
# - pacman

init_variables() {
  COMMAND=${0##*/}

  TMP_DIR="$( mktemp -d )"
  trap 'rm -rf "${TMP_DIR}"' EXIT

  TYPE='all'
}

show_usage() {
  cat <<- EOF
	usage: ${COMMAND} [<options>]

	List orphaned packages (strict or optional)

	Options:
	  -h    show this message only
	  -o    list only optional packages
	  -s    list only strictly orphan packages
	EOF
}

parse_command_line() {
  while getopts hos OPT; do
    case "${OPT}" in
      h) show_usage; exit 0 ;;
      o) TYPE='optional' ;;
      s) TYPE='strict' ;;
      ?) exit_error ;;
    esac
  done

  shift $(( OPTIND - 1 ))
}

exit_error() {
  [ -z "$1" ] || echo "${COMMAND}: $1"
  echo "Try '${COMMAND} -h' for more information."
  exit 1
} >&2

list_orphans() {
  pacman -Qtdq > "${TMP_DIR}/strict"
  pacman -Qttdq > "${TMP_DIR}/strict_and_optional"
  comm -13 "${TMP_DIR}/strict" "${TMP_DIR}/strict_and_optional" \
    > "${TMP_DIR}/optional"

  case "${TYPE}" in
    all)
      if [ -s "${TMP_DIR}/strict" ]; then
        printf 'strict:\n'
        sed 's/^/- /' "${TMP_DIR}/strict"
      fi

      if [ -s "${TMP_DIR}/optional" ]; then
        printf 'optional:\n'
        sed 's/^/- /' "${TMP_DIR}/optional"
      fi
      ;;
    strict)
      cat "${TMP_DIR}/strict"
      ;;
    optional)
      cat "${TMP_DIR}/optional"
      ;;
  esac
}

init_variables
parse_command_line "$@"

rm -rf "${TMP_DIR}"
mkdir -p "${TMP_DIR}"

list_orphans

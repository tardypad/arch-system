pkgname=system-config
pkgdesc='System configurations'
pkgver=281
pkgrel=1
url='https://sr.ht/~tardypad/arch-system'
arch=('any')
license=('custom')

groups=(
  'tardypad'
)

backup=(
  etc/NetworkManager/system-connections/Chestnut
  etc/pacman.d/chestnut
)

install=system-config.install

_rootdir=$PWD

package() {
  # base installation
  depends+=(
    base
    linux
    linux-firmware
    efibootmgr
    grub
    intel-ucode
  )

  # dotfiles
  depends+=(
    aerc
    aria2
    bat
    bluez-obex
    bluez-tools
    bluez-utils
    ctags
    curl
    entr
    fontconfig
    foot
    fzf
    gammastep
    git
    git-delta
    gnupg
    grim
    htop
    httpie
    i3blocks
    imagemagick
    imv
    isync
    jq
    khard
    less
    libnotify
    libqalculate
    libxml2
    light
    mako
    mitmproxy
    mpc
    mpd
    mpv
    neovim
    networkmanager
    opendoas
    openssh
    otf-font-awesome
    pass
    pipewire-audio
    poweralertd-git
    pulsemixer
    pv
    qrencode
    qutebrowser
    remind
    ripgrep
    rsync
    scdoc
    sfeed
    slurp
    sway
    swaybg
    swayidle
    swaylock
    tmux
    tmux-xpanes
    tofi
    translate-shell
    upower
    vdirsyncer
    w3m
    wayprompt
    weechat
    wf-recorder
    wireplumber
    wl-clipboard
    xdg-utils
    yubikey-manager
    zathura
    zsh
  )

  # plugins
  depends+=(
    fzf-tab-git
    neovim-cmp-buffer-git
    neovim-cmp-git
    neovim-cmp-nvim-lsp-git
    neovim-cmp-tags-git
    neovim-cmp_luasnip-git
    neovim-formatter-git
    neovim-lint-git
    neovim-lspconfig-git
    neovim-luasnip-git
    vim-goyo-git
    vim-gutentags-git
    vim-nerdcommenter
    vim-repeat
    vim-sayonara-git
    vim-surround
    vim-taboo-git
    vim-tagbar
    vim-tmux-navigator-git
    vim-undotree
    vim-unicode-git
    weechat-vimode-git
    zathura-cb
    zathura-pdf-mupdf
    zsh-autosuggestions
    zsh-history-substring-search
    zsh-syntax-highlighting

  # system
  depends+=(
    bluez
    cryptsetup
    device-mapper
    dosfstools
    e2fsprogs
    logrotate
    lvm2
    lxd
    man-db
    man-pages
    ntfs-3g
    pipewire-pulse
    s-nail
    tlp
    usbutils
  )

  # network
  depends+=(
    inetutils
    ldns
    mtr
    nmap
    speedtest-cli
    termshark
    wireguard-tools
  )

  # development
  depends+=(
    autoconf
    automake
    bats
    bison
    diffutils
    fakeroot
    flamegraph
    gcc
    go
    gopls
    make
    meson
    ninja
    patch
    perf
    pkgconf
    shellcheck-bin
    strace
    valgrind
    which

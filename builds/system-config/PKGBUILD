  depends+=(
    cairo-docs
    pango-docs
    wayland-docs
    wayland-protocols
  )

  # GUI
  depends+=(
    chromium
    firefox
    gimp
    inkscape
    libreoffice-fresh
    xorg-xwayland
  )

  # extra
  depends+=(
    asciinema
    bc
    chafa
    dotfiles-git
    ets-bin
    fd
    frangipanni
    graphviz
    go-yq
    gron
    hyperfine
    ncdu
    oath-toolkit
